/* 商品信息 */
.information{
  width: 94%;
  height: 260rpx;
  border-radius: 16rpx;
  position: absolute;
  top: 460rpx;
  margin: 3%;
 box-shadow:4px 4px 10px #D0D0D0;
}
.information .information-top{
  width: 100%;
  position: relative;
  height: 90rpx;
  color: #fff;
  background:  linear-gradient(to right , #FC5E52,#F75352);
 border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}
.information .information-top .information-top-left{
  width: 30%;
  text-align: center;
  line-height: 90rpx;
  float: left;
  font-size: 40rpx;
}
.information .information-top .information-top-right{
  width: 20%;
  float: right;
  font-size: 24rpx;
 
  line-height: 45rpx;
  background-color: rgb(44, 42, 42);
  border-top-right-radius: 16rpx;
  border: 8rpx solid rgb(44, 42, 42);
  margin-top: -14rpx;
}
.information .information-top .information-top-right .endtext{
 text-align: center;
  width: 100%;
  height: 45rpx;
}
.information .information-top .information-top-right .endtime{
  width: 100%;
  height: 45rpx;
}
.information-title{
  margin-left: 4%;
  width: 100%;
  height: 50rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: rgb(63, 62, 62);
}
.information-tips{
   margin-left: 4%;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #D0D0D0;
}
.information-volume{
   margin-left: 4%;
  font-size: 24rpx;
}

.details{
