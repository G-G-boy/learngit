/* pages/index/index.wxss */
.absolute{
  position: absolute;
  width: 100%;
}
.address{
  color: #fff;
  width: 100%;
  height: 160rpx;
  display: flex;
  margin-bottom: 10rpx;
  background:linear-gradient(#F75352,#FC5E52);
}
.address-left{
  width: 76%;
  height: 160rpx;
  float: left;
  padding-left: 20rpx;

}
.address-left-top{
  width: 100%;
  height: 60%;
  display: flex;
  align-items:flex-end ;
  margin-left: 20rpx;
}
.address-left-text{
  padding: 10rpx;
  font-size: 30rpx;
}
.address-left-tab{
 padding: 10rpx;
  font-size: 28rpx;
}
.address-left-address{
  font-size: 26rpx;
  line-height: 64rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding-left: 30rpx;
}
.address-right{
  width: 22%;
  height: 160rpx;
  float: right;
}
#address-right-tu{
  width: 50%;
  height: 50%;
  border: 1rpx solid #fff;
  border-radius: 50%;  
}
.address-right-name{
  font-size: 28rpx;

}

/* 轮播图 */

.swiper-block{
  height: 370rpx;
  width: 100%;
}
.swiper-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  overflow:unset;
}
.slide-image{
  height:320rpx;
  width: 520rpx;
  border-radius: 9rpx;
  box-shadow: 0px 0px 30rpx rgba(0, 0,0,.2); 
  margin: 0rpx 30rpx;
  z-index: 1;  
}
.activ{
  transform: scale(1.14);
  transition:all .2s ease-in 0s;
  z-index: 20; 
}



