.juzhong{
  width: 100%;
  height: 100%;
  padding-top: 10%;
  text-align: center;
}
.announcement{
  display: flex;
  height: 60rpx;
  padding-left: 30rpx;
  border-radius: 30rpx ;
  margin: 20rpx 5% 20rpx 5%;
  font-size: 24rpx;
  background:  linear-gradient(to right ,#F75352,#FC5E52);
  color: #fff;
}
.announcement image{
  margin-top: 2.5%;
  width: 30rpx;
  height: 30rpx;
}
.announcement text{
  line-height: 60rpx;
  margin-left: 20rpx;
}
.tab{
  display: flex;
  height: 80rpx;
  font-size: 28rpx;
  color: #898989;
  margin: 0rpx 5% 20rpx 5%;
  line-height: 80rpx;
  border-bottom: 4rpx solid #F24C50;
}
.tab #btn-left{
  padding-left: 20rpx; 
  padding-right: 20rpx;
  height: 80rpx;
}

.tab #btn-right{
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 80rpx;
}

.count-down{
  margin-left: 20%;
}

.selected{
  background: linear-gradient(to bottom right, #FA6466 , #FC494C);
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  color: #fff;
}
.defaul{
  background-color: #fff;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.swiper-tab{
  display: flex;
  width: 90%;
  margin: 0 auto;
  font-size: 30rpx;
}
.swiper-tab-item{
  color: #747273;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}
.move-bg{
  background-color: #fff;
}
.active{
  color: #0e0e0e;
  font-weight:bold;
  border-bottom: 4rpx solid #F97D65;
}
.index-card{
  position: relative;
  width: 90%;
  height: 250rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  box-shadow:4px 4px 10px #EEE;
  margin-bottom: 60rpx;
  background-color: #fff;
}
.index-card-left{
  width: 40%;
  height: 100%;
  float: left;
   text-align: center;
}
.index-card-img{
  width: 86%;
  height: 86%;
  border-radius: 12rpx;
  margin-top: 7%;
}
.index-card-right{
  width: 60%;
  height: 100%;
  float: right;
}
.index-card-name{
  float: left;
  font-size: 32rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 3%;
  color: #424242;
}
.index-card-time{
float: left;
width: 100%;
font-size: 28rpx;
color: #DE7262;
margin-top: 2%;
}
.index-card-quantity{
 font-size: 24rpx;
 color: #888888;
 margin-top: 3%;
}
.index-card-price{
  color: #FC5340;
  width: 100%;
  margin-top: 12%;
}
.index-card-price image{
  width: 35rpx;
  height: 35rpx;
  float: right;
  margin-right: 20rpx;
  border-radius: 50%;
  padding: 10rpx;
  background: linear-gradient(to bottom right, #FD7D7C , #FB5849);
}
