/* pages/classification/classification.wxss */
.classify{
  min-height: 100%;
  width:100%;
  display: flex;
  position:absolute;
  top: 0;
  bottom: 0;
}
.left-nav{
  width: 25%;
  height: 100%;
  background-color: #f2f2f2;
}
.left-nav .left-nav-item{
  width: 100%;
  height: 70rpx;
  font-size: 70%;
  line-height: 70rpx;
  text-align: center;
  color: #000;
  border-bottom: 2rpx solid #fff;
}
.active{
  font-weight:bolder;
  background-color: #fff;
}
.right-goods{
  width: 100%;
  height:100%;
}
.right-goods-item{
  position: relative;
  width: 94%;
  height: 220rpx;
  margin: 0 auto;
  border-bottom: 6rpx solid #f2f2f2;
}
.goods-left{
  float: left;
  height: 100%;
  width: 36%;
  text-align: center;
}
.goods-left .img{
  margin-top: 5%;
  width: 95%;
  height: 90%;
}
.goods-right{
  float: right;
  width: 64%;
  height: 100%;
}
.goods-right image{
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-top: 10rpx;
  margin-right: 30rpx;
  border-radius: 50%;
  background-color: pink;
}
.goods-name{
  font-size: 32rpx;
 overflow: hidden;
 margin-top: 20rpx;
 margin-left: 20rpx;
 white-space: nowrap;
  text-overflow: ellipsis;
}
.goods-price{
  margin-left: 20rpx;
  margin-top: 26%;
}
