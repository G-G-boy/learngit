page{
  background-color: #f7f7f7;
}
.bg{
  width: 100%;
  height: 400rpx;
  background:linear-gradient(#F75352,#F78469);
  position: absolute;
  top: 0;
  z-index: -2;
}
.input{
  width: 90%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 60rpx;
  margin: 20rpx auto 20rpx;
  display: flex;
  line-height: 60rpx;
}
.input .input-left{
  font-size: 24rpx;
  padding:0 30rpx 0 30rpx;
}
.input .input-right{
   font-size: 24rpx;
   color: #666;
}
.communitynow{
  text-align: center;
  position: relative;
  height: 500rpx;
}
.communitynow text{
  display: block;
  color: #fff;
  font-size: 26rpx;
  margin: 10rpx;
}
.communitynow .img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
}
.communitynow .communityinfo{
  width: 90%;
  height: 360rpx;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 20rpx;
  position: absolute;
  left: 5%;
  top:110rpx;
  z-index: -1;
  box-shadow: 0px 0px 30rpx rgba(0, 0,0,.2); 
}
.communitynow .communityinfo .tuanzhang{
  padding-top: 100rpx;
  width: 100%;
  color: #666;
  font-size: 26rpx;
}
.communitynow .communityinfo .communityname{
  width: 100%;
 font-size: 36rpx;
 font-weight: bolder;
 margin:20rpx 0 20rpx 0;
}
.communitynow .communityinfo .adressinfo{
  width: 100%;
 font-size: 28rpx;
 color: #444;
}
.communitytitle{
  width: 100%;
  height: 100rpx;
  line-height: 120rpx;
  background-color: #fff;
}
.communitytitle text{
  font-size: 34rpx;
  font-weight: bolder;
  padding-left: 20rpx;
  border-left: 12rpx solid #F75352;
  color: #222;
}