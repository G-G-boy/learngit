page { background-color: #F7F7F7; }
.wraper{
	position: relative;
}
/*收货地址*/
.top{
  display: flex;
}
.box{
  width: 100%;
  height: 146rpx;
  background-color: #fff;
  text-align: center;
  line-height: 146rpx;
}
.box .boxtext{
  color: #666;
  font-size: 36rpx;
}
.address{
  width: 90%;
	height: 146rpx;
	padding-left: 40rpx;
	background: #fff;
}
.toaddress{
  width: 10%;
  text-align: center;
  background-color: #fff;
}
.toaddress image{
  margin-top: 56rpx;
  width: 50rpx;
  height: 50rpx;
}
.address .name{
  font-size: 28rpx;
	line-height: 90rpx;
}
.address .number{
  font-size: 28rpx;
	line-height: 90rpx;
	margin-left: 60rpx;
}
.address-address{
  height: 40rpx;
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  white-space : nowrap;
  text-overflow: ellipsis;
}
/*商品订单列表*/
.productDetails{
	background: #fff;
	margin-top: 20rpx;
	color: #666;
}

.orderListDetails{
	display: flex;
	height: 226rpx;
	border-bottom: 1rpx solid #f3f3f3;
}
.orderListDetails .productImg{
	flex: 1;
	height: 140rpx;
	margin-top: 38rpx;
	margin-left: 30rpx;
}
.orderListDetails .productImg image{
	width: 100%;
	height: 100%;
}
.orderListDetails .productInfo{
	flex: 4;
	padding: 20rpx 30rpx;
}
.orderListDetails .productInfo .productTitle{
  width: 520rpx;
  height: 84rpx;
	overflow: hidden;
  white-space : normal nowrap;
	text-overflow: ellipsis;
    font-size: 28rpx;
    margin-top:10rpx;
}
.productPrice{
  font-size: 26rpx;
}
.orderListDetails .productInfo .productQuantity{
	float: right;
  font-size: 28rpx;
}
.hhh{
  height: 15rpx;
}

/*提交订单*/
.submitOrder{
	width: 100%;
	height: 100rpx;
	background: #fff;
	position: fixed;
	bottom: 0;
}
.submitOrder .account{
	float: right;
	font-size: 34rpx;
	color: #666;
	margin-right: 20rpx;
	text-align: right;
}
.submitOrder .account .count{
	line-height: 100rpx;
}
.submitOrder .account .price{
	color: #E95A47;
}
.submitOrder .submit{
	float: right;
}
.submitOrder .submit .submitBtn{
	width: 250rpx;
	height: 100rpx;
  font-size: 38rpx;
	line-height: 100rpx;
	color: #fff;
	border-radius: 0px;
	border: none;
	background: #FE5443;
}