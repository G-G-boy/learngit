/* pages/cart/cart.wxss */
page{background: #F7F7F7;}
.br{
  height: 120rpx;
}

.footer{
background-color: #fff;
width: 100%;
height: 100rpx;
line-height: 100rpx;
position: fixed;
bottom: 0;
text-align: center;
}
.footer .footer-body{
  position: relative;
}
.footer .selectall icon{
  margin-top: 21rpx;
  float: left;
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.footer  text{
  float: left;
 font-size: 28rpx;
}
.footer  .allprice{
  width: 40%;
float: left;
font-size: 28rpx;
}
.footer .settlement{
float: right;
  width: 40%;
background-color: #FF5343;
font-size: 32rpx;
color: #fff;
}

.cart{
  margin-top: 30rpx;
}

.cart-box{
  background: #FFF;
 position: relative;
  width: 94%;
  height: 280rpx;
  margin: 0 auto;
  border-radius: 16rpx;
   box-shadow:4px 4px 10px #EEE;
}
.cart-box-icon{
  margin-top: 16%;
  margin-left: 1%;
  margin-right: 1%;
  float: left;
}
.cart-box-img{
  float: left;
  margin-top: 30rpx;
  width: 220rpx;
  height: 220rpx;
}
.cart-box-right{
  float: right;
  width: 60%;
  height: 100%;
}



.cart-box-right-top{
  width: 86%;
  margin-top: 8%;
  margin-left: 5%;
  position: relative;

}
.cart-box-right-title{
  color: #464646;
  font-size: 32rpx;
  font-weight: bold;
  float: left;
  overflow: hidden;
  width: 86%;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.cart-box-right-del{
  color: red;
  float: right;
}
.cart-box-right-del image{
  width: 40rpx;
  height: 40rpx;
}

.cart-box-right-bottom{
  width: 90%;
  margin-top: 48%;
  margin-left: 5%;
  position: relative;
}
.cart-box-right-price{
  color: #FB5144;
  float: left;
}
.cart-box-right-number{
  display: flex;
  margin-right: 20rpx;
  float: right;
}

.number{
  color: #83868F;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.count{
  margin-top: 6rpx;
  width: 40rpx;
  height: 40rpx;
}
.add{
   margin-top: 6rpx;
  width: 40rpx;
  height: 40rpx;
}


.body{
  text-align: center;
}
.body image{
  margin-top: 230rpx;
  width: 300rpx;
  height: 300rpx;
}
.text{
  color: #656565;
  font-size: 30rpx;
}
.button{
  font-size: 34rpx;
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: linear-gradient(to right, #ff5041 , #fa6c58);
  color: #fff;
  border-radius: 8px;
  position: absolute;
  top: 600rpx;
  left: 226rpx;
}