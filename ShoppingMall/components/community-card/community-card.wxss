.body{
  width: 100%;
  height: 250rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #eee;
}
.community-card{
  width: 90%;
  margin: 0 auto;
  padding-top: 44rpx;
  position: relative;
}
.community-card .community-card-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  background-color: #fff;
  float: left;
}
.community-card .community-cardinfo{
  float: right;
  width: 540rpx;
}
.community-card .community-cardinfo .community-cardname{
  width: 100%;
  font-size: 30rpx;
  margin: 0 0 10rpx 0;
}
.community-card .community-cardinfo .community-cardadress{
  width: 100%;
  font-size: 26rpx;
  color: #333;
}
.community-card .community-cardinfo .community-cardtuanz{
  width: 100%;
  font-size: 26rpx;
  color: #666;
  margin-top: 5rpx;
}