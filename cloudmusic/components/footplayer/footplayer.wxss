
.player{
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
   border-top: 1rpx solid rgba(0, 0, 0, 0.1);
   background-color: #fff;
}
.playbox{
  position: relative;
}
.playimg{
  float: left;
  width: 80rpx;
  height: 80rpx;
  margin: 5rpx;
  border-radius: 5rpx;
}
.playbox .text{
  width: 450rpx;
  height: 90rpx;
  float: left;
  margin-left: 10rpx;
}
.playbox .text .singname{
   color: #333;
   width: 100%;
   height: 45rpx;
   line-height: 55rpx;
   font-size: 26rpx;
     text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.playbox .text .singer{
  color: #787878;
  width: 100%;
   height: 45rpx;
   line-height: 30rpx;
  font-size: 24rpx;
    text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.playerbtn{
  float: right;
  width: 60rpx;
  height: 60rpx;
  margin: 15rpx;
}
.playeritems{
  float: right;
  width: 60rpx;
  height: 60rpx;
  margin: 15rpx;
}

.maxheight{
  max-height: 800rpx;
}
.cengkaixia{
  height: 90rpx;
}