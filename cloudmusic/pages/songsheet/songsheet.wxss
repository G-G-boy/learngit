}
.sheetbody{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  flex-wrap:wrap;
}
.songlist-box{
  width: 350rpx;
  height: 450rpx;
  margin: 8rpx;
  position: relative;
}
.songlist-box .songimg{
   width: 350rpx;
   height: 350rpx;
   border-radius: 10rpx;
}
.songlist-box .songname{
  width: 100%;
  height: 100rpx;
  padding: 10rpx;
  font-size: 26rpx;
  overflow: hidden;
  color: #555;
}
.songlist-box .playcount{
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  color: #fff;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 32rpx;
  background-color: rgba(0, 0, 0, 0.233);
}
.songlist-box .username{
  position: absolute;
  bottom: 110rpx;
  left: 20rpx;
  color: #fff;
  padding: 5rpx 10rpx 5rpx 10rpx;
  border-radius: 40rpx;
  background-color: rgba(0, 0, 0, 0.233);
}

