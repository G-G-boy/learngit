.boutiquebox .boutique-img-box{
  float: left;
  width: 300rpx;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.boutiquebox .boutique-img-box .img{
  width: 230rpx;
  height: 230rpx;
  border-radius: 8rpx;
}

.boutiquebox .boutique-right {
float: right;
height: 300rpx;
width: 440rpx;
}
.boutiquebox .boutique-right .boutique-title{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 38rpx;
  font-weight: bolder;
  color: #fff;
  margin-top: 40rpx;
}
.boutiquebox .boutique-right .boutique-name{
